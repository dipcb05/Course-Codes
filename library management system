char categories[][20]= {"CSE", "EEE", "BBA","BBA in AIS", "ECO"};
struct books
{
    int id;
    char name[20];
    char Author[20];
    int quantity;
    float Price;
    char *cat;
    char stdname[20];
};
struct books book;

